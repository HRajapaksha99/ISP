<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>Register User</servlet-name>
		<servlet-class>com.oop.servlet.AddUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register User</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.oop.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UploadDP</servlet-name>
		<servlet-class>com.oop.servlet.UploadDP</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UploadDP</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateUserServlet</servlet-name>
		<servlet-class>com.oop.servlet.UpdateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateUserServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteUserServlet</servlet-name>
		<servlet-class>com.oop.servlet.DeleteUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteUserServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.oop.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AdminUserServlet</servlet-name>
		<servlet-class>com.oop.servlet.AdminUsertServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminUserServlet</servlet-name>
		<url-pattern>/profile update</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateItemServlet</servlet-name>
		<servlet-class>com.oop.servlet.UpdateItemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateItemServlet</servlet-name>
		<url-pattern>/item update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddEmployeeServlet</servlet-name>
		<servlet-class>com.oop.servlet.AddEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddEmployeeServlet</servlet-name>
		<url-pattern>/addemp</url-pattern>
	</servlet-mapping>
<servlet>
		<servlet-name>DeleteEmployeeServlet</servlet-name>
		<servlet-class>com.oop.servlet.DeleteEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteEmployeeServlet</servlet-name>
		<url-pattern>/delemp</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>GetEmployeeServlet</servlet-name>
		<servlet-class>com.oop.servlet.GetEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetEmployeeServlet</servlet-name>
		<url-pattern>/get-emp</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateEmpServlet</servlet-name>
		<servlet-class>com.oop.servlet.UpdateEmpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateEmpServlet</servlet-name>
		<url-pattern>/Update-emp</url-pattern>
	</servlet-mapping>
</web-app>